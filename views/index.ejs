  <body >

    <h1>Budgtr ALL</h1>
 
      <% let bankAccount = 0 
       for (let i =0; i < budgets.length; i++) {
       bankAccount += parseInt(budgets[i].amount)
       } %>

     <div><h1><%= bankAccount %></h1></div>

    <div class="containter">


      <a href="/budgets/new"><button>Create new expense</button></a>


         <table>
            <% for(let i = 0; i < budgets.length; i++) { %>
        <tr>
           <td><%= budgets[i].date %></td>
          <td>
                <a href="/budgets/<%=i%>" ><%=budgets[i].name %></a>
          </td>
          <td><%= budgets[i].amount %></td>
        </tr>
       <% } %>
      </table>
      <% if (bankAccount > 1000) { %> <style>body {background-color: green;}</style>}<%
    } 
      else if (bankAccount < 0) { %> <style>body {background-color: red;} </style> <%}%>
 
    </div>
    
    
  </body>
